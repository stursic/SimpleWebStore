@model SimpleWebStore.Models.Products

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@Html.DisplayFor(item => item.Name)</h3>
    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-2">
                @if (Model.Image == null)
                {
                    <img src=@Url.Content("~/Content/nopicture.png") alt="some_text" class="img-responsive" width="150" height="150">
                }
                else
                {
                    <img src=@Url.Content("~/Content/Images/"+ @Html.DisplayFor(item => item.Image)) alt="some_text" class="img-responsive" width="150" height="150">
                }

            </div>
            <div class="col-md-10">
                <p><b>Description:</b> @Html.DisplayFor(item => item.Description)</p>
                <p><b>Category:</b> @Html.DisplayFor(item => item.Categories.CategoryName)</p>
                <p><b>Price:</b> @Html.DisplayFor(item => item.Price) $</p>
                <br>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id}, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-primary" })
                </p>
            </div>
        </div>


    </div>
</div>

